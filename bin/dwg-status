#!/usr/bin/env perl

use strict;
use warnings;

use App::Dwg::Status;

our $VERSION = 0.01;

# Run.
exit App::Dwg::Status->new->run;

# Print version.
sub VERSION_MESSAGE {
	print $VERSION."\n";
	exit 0;
}

__END__

=pod

=encoding utf8

=head1 NAME

dwg-status - Script with output like AutoCAD status command.

=head1 SYNOPSIS

 dwg-status [-h] [--version] dwg_file

